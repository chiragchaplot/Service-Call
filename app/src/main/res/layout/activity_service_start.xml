<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tseapp.paperbind.servicecall.service_start">


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id = "@+id/scan_barcode"
        android:text = "Scan Barcode"
        android:layout_centerHorizontal="true"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id = "@+id/barcode"
        android:hint = "Enter Barcode"
        android:layout_below="@+id/scan_barcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:inputType="number" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id = "@+id/submit"
        android:text = "Submit"
        android:layout_below="@+id/barcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text = "Reset"
        android:layout_below="@+id/submit"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignStart="@+id/submit"
        android:id="@+id/reset" />
</RelativeLayout>
